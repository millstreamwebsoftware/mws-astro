---
import MarkdownIt from "markdown-it";
const md = new MarkdownIt({ html: true });

export interface Props {
  images: any[];
  height: number;
}

const { images, height } = Astro.props;
---

<section class="gallery">
  {
    images.map((img) => (
      <figure class="gallery-item">
        <img src={img.image} />
        <figcaption>
          <h3>{img.title}</h3>
          <div set:html={md.render(img.description)} />
        </figcaption>
      </figure>
    ))
  }
</section>

<style lang="scss">
  .gallery {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    grid-template-rows: 1fr;
    grid-auto-flow: column;
    gap: var(--columnGap);
    padding: var(--columnGap);
    // height: 100%;
  }

  .gallery-item {
    aspect-ratio: 1;
    line-height: 0;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;

    img {
      max-width: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
</style>

<style define:vars={{ height }}>
  section.gallery {
    height: calc(var(--height) * 1vh);
  }
</style>
