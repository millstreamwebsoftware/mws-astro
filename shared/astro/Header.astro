---
import preferences from "data/preferences.json";
import Navigation from "./Navigation.astro";
import Social from "@components/social/social.astro";

export interface Props {
  id?: string;
  currentPath?: string;
  paths?: any[];
}

const { id, currentPath, paths } = Astro.props;
---

<header class:list={{ pinned: preferences.header.pin_header }}>
  {
    preferences.header.show_logo && (
      <a class="logo" href="/">
        <img src={preferences.header.logo_image} />
      </a>
    )
  }
  {
    preferences.header.show_navigation && (
      <Navigation {id} {paths} {currentPath} />
    )
  }
  {preferences.header.show_socials && <Social />}
</header>

<style>
  header {
    color: rgb(var(--header-color));
    display: grid;
    grid-template-areas: "logo navigation social";
    z-index: 9999;
    height: var(--header-height);
    background: linear-gradient(
      to bottom,
      rgba(var(--header-background-color)),
      rgba(var(--header-background-color-bottom))
    );
  }

  header.pinned {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
  }

  .logo {
    padding: 10px;
  }
</style>
