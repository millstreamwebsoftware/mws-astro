---
const {frontmatter} = Astro.props;

const gallery = frontmatter.gallery;
---
<section>
    <ul class="gallery">
        {gallery.images.map(img => (
            <li class="gallery-item"><img src={img.src} /></li>
        ))}
    </ul>
</section>

<style>
.gallery {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: row;
    width: 100%;
    list-style-type: none;
}

.gallery .gallery-item {
    flex: 1 1 auto;
}

.gallery .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
</style>