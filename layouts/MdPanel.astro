---
const {frontmatter} = Astro.props;
const backgroundImage = frontmatter.backgroundImage;
const background = frontmatter.background;
const foreground = frontmatter.foreground;
---
<section>
    {backgroundImage && <img class="userBG" src={backgroundImage} />}
    <slot />
</section>

<style define:vars={{ background, foreground }}>
    section {
        color: var(--foreground);
        background: var(--background);
        padding: 5rem;
    }

    section img.userBG {
        position: absolute;
        inset: 0;
        z-index: -1;
        object-fit: cover;
        object-position: center;
    }
</style>