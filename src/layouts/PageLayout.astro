---
import Page from "@shared/Page.astro";
import Layout from "./Layout.astro";

type Props = {
  frontmatter: any;
  id?: string;
  currentPath?: string;
};

if (!Astro.props.frontmatter) {
  throw new Error("Page frontmatter must be defined");
}
const props = Astro.props.frontmatter;
const { id, currentPath } = Astro.props;
---

<Layout {...props} {id} {currentPath}>
  <Page bookshop:live contentBlocks={props.content_blocks} _frontmatter={props} />
</Layout>
