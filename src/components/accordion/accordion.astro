---
import Icon from '@shared/icon.astro';

export interface Props {
  title?: string;
}

const {title} = Astro.props;
---

<div class="accordion">
    <div class="accordion-heading">
        <div class="accordion-icon">
            <Icon name="fa6-solid:circle-chevron-down" height="2rem"/>
        </div>
        <div class="accordion-title">
            <h4>{title}</h4>
        </div>
    </div>
    <div class="accordion-content">
        <slot />
    </div>
</div>

<style lang="scss">
    .accordion {
        display: grid;
        grid-template-rows: min-content 0fr;
        transition: grid-template-rows 0.2s;
    }
    
    .accordion.expanded {
        grid-template-rows: min-content 1fr;
    }
    
    .accordion-content {
        overflow: hidden;
    }

    .accordion-heading {
        display: grid;
        grid-template-areas: "icon title";
        gap: 1rem;
        padding: 1rem 0;
        margin-bottom: 1rem;
        align-items: center;
        border-bottom: 1px solid rgb(var(--accordion-rule-color, var(--text-color)));
        
        grid-template-columns: 2rem 1fr;
        
        .accordion-icon {
            grid-area: icon;
            color: rgb(var(--heading-color));
        }
        
        .accordion-title {
            grid-area: "title";
        }
    }
</style>

<style is:global lang="scss">
    .accordion-heading .accordion-icon svg {
        transform: rotate(0deg);
        transition: transform 0.2s ease-in-out;
    }

    .accordion.expanded .accordion-heading .accordion-icon svg {
        transform: rotate(-180deg);
    }
</style>

<script>
  document.addEventListener("DOMContentLoaded", setupAccordion);
  document.addEventListener("astro:after-swap", setupAccordion);
  
  function setupAccordion() {
    const accordions = document.querySelectorAll<HTMLElement>(".accordion");
    
    if (!accordions) return;
    
    accordions.forEach((accordion) => accordion.addEventListener("click", toggleAccordion));
    
  }
  
  function toggleAccordion(e: Event) {
    if (!e.currentTarget) return;
    const target = (e.currentTarget as Element);
    const state = target.classList.contains("expanded");
    
    if (!state) target.closest("section")?.querySelectorAll(".accordion").forEach((sibling) => {
      if (sibling !== target)
      sibling.classList.remove("expanded");
    });
    
    target.classList.toggle("expanded");
  }
</script>
