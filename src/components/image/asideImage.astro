---
import Image from "@shared/Image.astro";

const image = Astro.props.src;

const { width = 256, height = 256, class: classes, title } = Astro.props;
---

<figure class:list={classes}>
    <Image {image} {width} {height} {...Astro.props} fit="contain" />
    {title && <figcaption>{title}</figcaption>}
</figure>

<style>
    figure {
        width: 100%;
        max-width: 40%;
    }

    figcaption {
        display: block;
        font-size: var(--text-size-medium);
        margin-top: 0.5em;
    }

    figure.align-left {
        margin: 0 2rem 2rem 0;
        float: left;
    }
    figure.align-right {
        margin: 0 0 2rem 2rem;
        float: right;
    }
    figure.align-center {
        position: relative;
        float: none;
        max-width: 100%;
        height: 40rem;
    }
</style>
