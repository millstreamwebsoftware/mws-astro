---
import {
  default as Image,
  type Props as ImageProps,
} from "@shared/Image.astro";
import clsx from "clsx";
// import _preferences from "@data/preferences.json";
// const preferences = _preferences as unknown as Preferences;

export interface Props {
  image: ImageProps["image"];
  src?: string;
  width?: number;
  height?: number;
  alt?: string;
  title?: string;
  description?: string;
  fit?: "contain" | "cover";
  size?: "small" | "medium" | "large";
  "data-size"?: "small" | "medium" | "large";
  "data-width"?: string;
  "data-height"?: string;
  align?: "left" | "center" | "right";
  "data-align"?: "left" | "center" | "right";
  classes?: (string | string[])[];
  class?: string;
}

const {
  alt,
  classes = Astro.props.class,
  title,
  description,
  width,
  height,
  "data-width": _displayWidth,
  "data-height": _displayHeight,
  fit = "contain",
  size = Astro.props["data-size"],
  align = Astro.props["data-align"] ?? "center",
} = Astro.props;

const [displayWidth, displayHeight] = [
  Number.parseInt(_displayWidth || "0") || undefined,
  Number.parseInt(_displayHeight || "0") || undefined,
];

const image = Astro.props.src ?? Astro.props.image;

const _classes = clsx(classes).split(" ");

const imgAlign =
  align ??
  _classes
    .find(
      (c) => c === "align-left" || c === "align-center" || c === "align-right",
    )
    ?.substring(6) ??
  "center";

// Hint displayed image size to generate more optimal srcset
const imgSize =
  size ??
  _classes.find((c) => c === "small" || c === "medium" || c === "large") ??
  "small";

(Astro.props.align || Astro.props.size) &&
  console.warn("[AsideImage] Align/Size set");
---

<figure class:list={["aside", `align-${imgAlign}`, imgSize]} {title}>
  <Image
    {image}
    {alt}
    {fit}
    {width}
    {height}
    displayWidth={displayWidth
      ? displayWidth / 100
      : { small: 0.33, medium: 0.5, large: 0.66 }[imgSize]}
    quality="mid"
  />
  {description && <figcaption>{description}</figcaption>}
</figure>

<style define:vars={{ displayWidth, displayHeight }}>
  figure > :global(img) {
    max-width: calc(var(--displayWidth, 0) * 1%);
    max-height: calc(var(--displayHeight, 0) * 1%);
  }
</style>

<style lang="scss">
  figcaption {
    font-size: var(--text-size-medium);
    color: rgb(var(--text-color));
    margin-top: 0.5em;
  }

  figure {
    display: flex;
    justify-content: center;
  }

  :where(figure),
  :where(figure.small) {
    max-width: 33%;
  }

  :where(figure.medium) {
    max-width: 50%;
  }

  figure.large {
    max-width: 66%;
  }

  :where(figure) {
    &.align-left {
      margin: 0.5em 4rem 4rem 0;
      float: left;
      clear: left;
    }
    &.align-right {
      margin: 0.5em 0 4rem 4rem;
      float: right;
      clear: right;
    }
    &.align-center {
      position: relative;
      width: 100%;
      max-width: 100%;
      float: none;
      margin: 3rem 0;

      /* :global(img) {
        max-width: 50%;
      } */
    }
  }

  @media only screen and (max-width: 768px) {
    figure:is(.small, .medium, .large) {
      max-width: 100%;
      width: 100%;
      float: none;
      margin: 3rem 0;
    }
  }

  figure:first-child {
    margin-top: 0;
  }
  figure:last-child {
    margin-bottom: 0;
  }

  figure.aside :global(img) {
    max-width: 100%;
    max-height: 30rem;
  }

  figure.aside.small :global(img) {
    max-height: 30rem;
  }

  figure.aside.medium :global(img) {
    max-height: 40rem;
  }

  figure.aside.large :global(img) {
    max-height: 50rem;
  }
</style>

<style is:global lang="scss">
  /* Live editor support */
  .cms-editor-active .richtext > .component-wrapper img {
    max-height: 30rem;
    margin: 3rem 0;
    float: none;
    object-fit: contain;

    &[data-size="small"] {
      max-height: 30rem;
      max-width: 33%;
    }

    &[data-size="medium"] {
      max-height: 40rem;
      max-width: 50%;
    }

    &[data-size="large"] {
      max-height: 50rem;
      max-width: 66%;
    }

    &[data-align="left"] {
      margin: 0.5em 4rem 4rem 0;
      float: left;
      clear: left;
    }
    &[data-align="right"] {
      margin: 0.5em 0 4rem 4rem;
      float: right;
      clear: right;
    }
    &[data-align="center"] {
      width: 100%;
      max-width: 100%;
      float: none;
      margin: 3rem 0;
    }

    @media only screen and (max-width: 768px) {
      max-width: 100%;
      width: 100%;
      float: none;
      margin: 3rem 0;
    }
  }
</style>
