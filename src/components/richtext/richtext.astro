---
import { convertColorString } from "@mws-astro/util";
import Markdown from "@shared/Markdown.astro";

export interface Props {
  content: string;
  background_color?: string;
  classes?: any;
  style?: Record<string, string>;
}

const { background_color, style, classes, content } = Astro.props;
const background = convertColorString(background_color);
---

<section
  style={{...(background && { "--background-color": background })}}
  class:list={["rich-text", classes]}
>
  <Markdown {content} />
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
</style>
