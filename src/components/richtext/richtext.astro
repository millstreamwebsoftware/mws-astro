---
import MarkdownIt from "markdown-it";
import { convertColorString } from "src/util";
const md = new MarkdownIt({ html: true });

export interface Props {
  content: string;
  background_color?: string;
  classes?: any;
  style?: Record<string, string>;
}

const { background_color, style, classes } = Astro.props;
const htmlContent = md.render(Astro.props.content);
const background = convertColorString(background_color);
---

<section
  style={Object.assign({ "--background-color": background }, style)}
  class:list={["rich-text", classes]}
  set:html={htmlContent}
/>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
</style>
